<body>
    <%- include("../partials/header-formularios.ejs") %>
    <nav class="second-bar-admin">
        Agregar productos
    </nav>
    <main class="formulario-reg">
        <section class="caja-central-form">
            <h2>AGREGAR PRODUCTOS</h2>
        <div class="botones-confirm">
        <section class="button-crear">
            <button type="submit" class="guardar" cursor="pointer">agregar producto</button>
        </section>
        <section class="button-crear">
            <a  class="edit"href="/admin/editar"><button type="submit" class="quitar">editar producto</button></a>
        </section>
        </div>
                
            <section class="datos-usuarios">
                <div>
                    <h4>Categorias</h4>
                    <select name="" id="">
                        <option value="">Categorias...</option>
                        <option value="">Celulares</option>
