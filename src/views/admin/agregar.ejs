                        <option value="">13"</option>
                        <option value="">13.3"</option>
                        <option value="">13.4"</option>
                        <option value="">13.5"</option>
                        <option value="">13.8"</option>
                        <option value="">14"</option>
                        <option value="">14.1"</option>
                        <option value="">15.6"</option>
                        <option value="">24"</option>
                        <option value="">32"</option>
                        <option value="">40"</option>
                        <option value="">42"</option>
                        <option value="">43"</option>
                        <option value="">49"</option>
                        <option value="">50"</option>
                        <option value="">55"</option>
                        <option value="">58"</option>
                        <option value="">60"</option>
                        <option value="">65"</option>
                        <option value="">70"</option>
                    </select>
                </div>
                <div>
                    <h4>smart</h4>
                    <select name="" id="">
                        <option value="">Seleccionar...</option>
                        <option value="">Si</option>
                        <option value="">No</option>
                    </select>
                </div>
                <div>
                    <h4>capacidad</h4>
                    <select name="" id="">
                        <option value="">GB</option>
                        <option value="">8GB</option>
                        <option value="">16GB</option>
                        <option value="">32GB</option>
                        <option value="">64GB</option>
                        <option value="">128GB</option>
                        <option value="">256GB</option>
                        <option value="">500GB</option>
                        <option value="">1TB</option>
                    </select>
                </div>
                <div class="apellido">
                    <h4>RAM</h4>
                    <select name="" id="">
                        <option value="">GB</option>
                        <option value="">1GB</option>
                        <option value="">1.5GB</option>
                        <option value="">2GB</option>
                        <option value="">4GB</option>
                        <option value="">8GB</option>
                        <option value="">12GB</option>
                        <option value="">16GB</option>
                        <option value="">20GB</option>
                        <option value="">32GB</option>
                        <option value="">64GB</option>
                    </select>
                </div>
                <section class="img-coment">
                <div>
                    <h4>Imagenes</h4>
                    <input class="input-file" type="file" multiple="" name="[]" id="">
                </div>
                <h4>descripción</h4>
                <textarea name="detalle" id="" cols="30" rows="10">
            </textarea>
        </section>
                
        </div>
    </main>

</body>
</html>