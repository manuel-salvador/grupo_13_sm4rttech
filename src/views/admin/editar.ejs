                                        <option value="10.9''" <%- product.tamaño=="10.9''" ? "selected" : "" %>>10.9"
                                        </option>
                                        <option value="11''" <%- product.tamaño=="11''" ? "selected" : "" %>>11"
                                        </option>
                                        <option value="11.6''" <%- product.tamaño=="11.6''" ? "selected" : "" %>>11.6"
                                        </option>
                                        <option value="13''" <%- product.tamaño=="13''" ? "selected" : "" %>>13"
                                        </option>
                                        <option value="13.3''" <%- product.tamaño=="13.3''" ? "selected" : "" %>>13.3"
                                        </option>
                                        <option value="13.4''" <%- product.tamaño=="13.4''" ? "selected" : "" %>>13.4"
                                        </option>
                                        <option value="13.5''" <%- product.tamaño=="13.5''" ? "selected" : "" %>>13.5"
                                        </option>
                                        <option value="13.8''" <%- product.tamaño=="13.8''" ? "selected" : "" %>>13.8"
                                        </option>
                                        <option value="14''" <%- product.tamaño=="14''" ? "selected" : "" %>>14"
