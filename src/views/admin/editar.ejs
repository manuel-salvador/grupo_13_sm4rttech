<body class="admin">
    <%- include('./partials/headerAdmin.ejs') %>
        <main class="admin">
            <%- include('./partials/navAdmin.ejs') %>
                <section class="formAdmin">

                    <section class="caja-central-form">
                        <h2>EDITAR PRODUCTOS</h2>
                        <form action="/admin/editar/<%= product.id%>?_method=PUT" method="POST"
                            enctype="multipart/form-data">
                            <section class="datos-usuarios">
                                <div>
                                    <h4>Categorias</h4>
                                    <select name="category" id="">
                                        <option value="">Categoria</option>
                                        <option value="celulares" <%- product.category=="celulares" ? "selected" : "" %>
                                            >Celulares</option>
                                        <option value="televisores" <%- product.category=="televisores" ? "selected"
                                            : "" %>>Televisores</option>
                                        <option value="tablets" <%- product.category=="tablets" ? "selected" : "" %>
                                            >Tablets</option>
                                        <option value="gaming" <%- product.category=="gaming" ? "selected" : "" %>
                                            >Gaming</option>
                                    </select>
                                </div>
                                <div>
                                    <h4>marcas</h4>
                                    <select name="marca" id="">
                                        <option value="">Marca...</option>
                                        <option value="Aorus" <%- product.marca=="Aorus" ? "selected" : "" %>>Aorus
                                        </option>
                                        <option value="Aplle" <%- product.marca=="Apple" ? "selected" : "" %>>Apple
                                        </option>
                                        <option value="Asus" <%- product.marca=="Asus" ? "selected" : "" %>>Asus
                                        </option>
