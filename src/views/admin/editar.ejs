                                        <option value="14.1''" <%- product.tamaño=="14.1''" ? "selected" : "" %>>14.1"
                                        </option>
                                        <option value="15.6''" <%- product.tamaño=="15.6''" ? "selected" : "" %>>15.6"
                                        </option>
                                        <option value="24''" <%- product.tamaño=="24''" ? "selected" : "" %>>24"
                                        </option>
                                        <option value="32''" <%- product.tamaño=="32''" ? "selected" : "" %>>32"
                                        </option>
                                        <option value="40''" <%- product.tamaño=="40''" ? "selected" : "" %>>40"
                                        </option>
                                        <option value="42''" <%- product.tamaño=="42''" ? "selected" : "" %>>42"
                                        </option>
                                        <option value="43''" <%- product.tamaño=="43''" ? "selected" : "" %>>43"
                                        </option>
                                        <option value="49''" <%- product.tamaño=="49''" ? "selected" : "" %>>49"
                                        </option>
                                        <option value="50''" <%- product.tamaño=="50''" ? "selected" : "" %>>50"
                                        </option>
                                        <option value="55''" <%- product.tamaño=="55''" ? "selected" : "" %>>55"
                                        </option>
                                        <option value="58''" <%- product.tamaño=="58''" ? "selected" : "" %>>58"
                                        </option>
                                        <option value="60''" <%- product.tamaño=="60''" ? "selected" : "" %>>60"
                                        </option>
                                        <option value="65''" <%- product.tamaño=="65''" ? "selected" : "" %>>65"
                                        </option>
                                        <option value="70''" <%- product.tamaño=="70''" ? "selected" : "" %>>70"
                                        </option>
                                    </select>
                                </div>
                                <div>
                                    <h4>smart</h4>
                                    <select name="smart" id="">
                                        <option value="">smat...</option>
                                        <option value="Si" <%- product.smart=="Si" ? "selected" : "" %>>Si</option>
                                        <option value="No" <%- product.smart=="No" ? "selected" : "" %>>No</option>
                                    </select>
                                </div>
                                <div>
                                    <h4>capacidad</h4>
                                    <select name="capacity" id="">
                                        <option value="">GB</option>
                                        <option value="8GB" <%- product.capacity=="8GB" ? "selected" : "" %>>8GB
