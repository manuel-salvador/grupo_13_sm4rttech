<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header-formularios.ejs') %>
    <main >
        <h3 class="all-products" >Todos nuestros productos</h3>
        <section class="products">
        <div class="card-product">
             <% products.forEach(product => { %>
                <div class="product">
                    <a class="detalle-product" href="/detalleDeProducto">
                    <img src="/images/carritoDeCompra/<%- product.image %> " alt="">
                    <div>
                        <h5><%= product.name.toUpperCase() %></h5>
                        <p class="card-text">Precio: <%= product.precio %></p>
                        <p class="card-text">ID: <%= product.id %></p>
                        <p class="card-text">Categoria: <%= product.category %></p>
                        <p class="card-text">Marca: <%= product.marca %></p>
                        <p class="card-text">Tamaño: <%= product.tamaño %></p>
                        <p class="card-text">Smart: <%= product.smart %></p>
                        <p class="card-text">RAM: <%= product.ram %></p>
                        <p class="card-text">Capacidad: <%= product.capacidad %></p>
                    </div>
                </a>
                </div>
              
             <% }) %>
        </div>        
    </section>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>